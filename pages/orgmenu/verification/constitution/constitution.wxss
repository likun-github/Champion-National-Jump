/* pages/orgmenu/verification/person.wxss */
Page {
  background-color: #eeeeee;
}

/*认证部分的信息输入框*/
.verificationInfoContainer {
  width: 100%;
  background-color: white;
  display: flex;
  flex-direction: column;
}
.verificationInfoContainer .key {
  display: flex;
  flex-direction: row;
  vertical-align: middle;
  font-size: 31rpx;
  letter-spacing: 3rpx;
  border-bottom: 2px solid rgb(234,234,234);
  line-height: 90rpx;
}
.key .star {
  margin-left:25rpx;
  color:red;
}
.key .infoTopic {
  color:rgb(65, 64, 64);
  width: 160rpx;
}
.key .inputStyle {
  color:rgb(65, 64, 64);
  flex:1;
  height: 90rpx;
}
.key .inputStyleRed {
  color:#E64340;
  flex:1;
  height: 90rpx;
}
.key .placeholderStyle {
  color:rgb(218, 216, 216);
}
.key .placeholderStyleRed {
  color:#E64340;
}

/*小字部分*/
.note {
  width:680rpx;
  margin-left:35rpx;
  margin-top:15rpx;
}
.note text {
  color:grey;
  font-size:24rpx;
  line-height:40rpx;
}


.text-center{
  text-align: center;
}


.bottom-empty{
  height: 128rpx;
}


.flex-between{
 display: flex;
 justify-content: space-between;
}

.icon{
  width: 30rpx;
  vertical-align: middle;
  margin-right: 5rpx;
}

.capsule{
  color: gray;
  font-size: 20rpx;
  padding: 8rpx 20rpx;
  margin: 5rpx;
  line-height: 18rpx;
  border-radius: 20rpx;
  box-shadow: 1rpx 1rpx 5rpx #d1d1d1;
}

.blue-btn{
  background-color: rgb(76,135,253);
  padding: 4rpx 20rpx;
  font-size: 30rpx;
  color: white; 
  margin: 10rpx 0 10rpx 0;
  display: inline-block;
}

/*确认提交按钮*/
.confirmation {
  background-color: #52A9FF;
  color:white;
  border-radius: 10rpx;
  width:500rpx;
  margin-top:35rpx;
  margin-left:125rpx;
  font-size: 30rpx;
  text-align: center;
  padding: 15rpx 0rpx;
}

/*顶部栏*/
.greyTop {
  background-color: #eeeeee;
  width: 100%;
  padding:15rpx 25rpx;
}
.greyTop text{
  font-size: 30rpx;
  color:#999999;
  letter-spacing: 3rpx;
}

.redTop {
  background-color: #E64340;
  width: 100%;
  padding:15rpx 0rpx;
  text-align: center;
}
.redTop text{
  font-size: 30rpx;
  color:white;
  letter-spacing: 3rpx;
}
