  <view class="modals modals-bottom-dialog" hidden="{{hideModal}}">
    <view class="modals-cancel" bindtap="hideModal"></view>
      <view class="bottom-dialog-body bottom-pos" animation="{{animationData}}">


        <view>
          <view class="dialog-body-top">
            <text wx:if="{{!registedInfo.authenticated}}" class="dialog-title">请选择您的身份</text>
            <image></image>
          </view>

          <view class="modalUl authRole" wx:if="{{registedInfo.authenticated}}">
              <view>已认证为:<text class="roleNameInModal">{{registedInfo.role=="student"?"学生":""}}{{registedInfo.role=="constitution"?"机构":""}}{{registedInfo.role=="coach"?"教练":""}}
              </text></view>
          </view>

          <view class="rolesContainer modalUl"  wx:else>
              <view wx:for="{{roles}}" data-role="{{item}}" class="modalLi roleContainer" wx:key="name" bindtap="goToIdentifyForm"><text class="roleName name {{item=='student'?'current':''}}">{{item=="student"?"学生":""}}{{item=="constitution"?"机构":""}}{{item=="coach"?"教练":""}}</text></view>

          </view>
        </view>
      </view>
    </view> 



     

