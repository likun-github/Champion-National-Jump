.levelContainer text{

  font-size: 28rpx;
  font-weight: bold;
  color: green;
  padding: 5rpx 30rpx;
  border: 4rpx solid green;
  background-color: white;
  border-radius: 100rpx;
}

.levelContainer text:first-child{
  position: absolute;
  top: 260rpx;
  left: 220rpx;
}

.levelContainer text:nth-child(2){
  position: absolute;
  top: 390rpx;
  left: 150rpx;
}

.levelContainer text:nth-child(3){
  position: absolute;
  top: 470rpx;
  left: 440rpx;
}





.competitionsContainer{
  padding: 0 40rpx;
}

.competition{
  margin: 20rpx 0;
  display: flex;
}

.left{
  
}
.left image{
  width: 250rpx;
  height: 250rpx;
  margin-right: 15rpx;
}

.right{
  display: flex;
  flex: 1;
  flex-direction: column;
  height: 250rpx;
  justify-content: space-between;
}
.right .competitionName{
  font-size: 45rpx;
  font-weight: bold;
  margin-left: 0; 
}
.players{
  display: flex;
  flex-direction: column; 
}
.players text{
  padding: 5rpx 0;
}

.rightBottom{
  color: gray;
  display: flex;
  font-size: 32rpx;
  
  vertical-align: middel;
}

.rightBottom  .time{
  font-size: 28rpx;
  vertical-align: middel;
}

.rightBottom .hot{
  margin: 0 20rpx;
  flex: 1;
  display: flex;
  justify-content: space-between;
}

.hot image{
  width: 30rpx;
}