@import "../game/game.wxss";
/*背景图*/
.background{
  width: 100%;
  position:absolute; 
  top:0;
}

/*关卡牌*/
.passTag {
  background-color: white;
  border-radius: 15rpx;
  box-shadow:  1px 1px 10px rgb(200, 200, 200); 
  width:140rpx;
  padding:4rpx 0rpx;
  text-align: center;
}
.passTag text {
  color:rgb(76,135,253);
  font-size: 35rpx;
  letter-spacing: 3rpx;
}


/*隐藏滚动条*/
::-webkit-scrollbar{
    width: 0;
    height: 0;
    color: transparent;
}


.trainPart{
  padding: 0 16rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  margin-top: 30rpx;
}
.train{
  color: gray;

  border: 4rpx solid skyblue;
  
  padding: 4rpx 6rpx;

  margin-bottom: 30rpx;
}

.train .cover{
  height: 325rpx;
  width: 325rpx;
}
.cover image{
  height: 100%;
  width: 100%;
}
.name{
  text-align: center;
  font-size: 30rpx;
}


.trainInfo{
  
  font-size: 24rpx;
  display: flex;
  justify-content: space-between;
}


.trainInfo .mediaInfo{
  display: flex;
}
.mediaInfo image{

  width: 30rpx;
  vertical-align: middle;

}


.treePart{
  /* height: 400rpx;
  width: 100%; */
  position: relative;
  width: 100%;
  height:  1000rpx;
  text-align: center;
  
}

.treeImage{
  margin-top: 180rpx;
}
