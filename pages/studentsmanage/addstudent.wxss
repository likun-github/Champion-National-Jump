/* pages/studentsmanage/addstudent.wxss */


.topInfo{
  display: flex;
  flex-direction: column;
  align-items: center;
 
}
.portrait{
  height: 150rpx;
  width: 150rpx;
}

.topInfo text{
  font-size: 36rpx;
  margin:20rpx 0;
}





#studentForm{
  padding: 0 50rpx;
}

.formCol{
  margin-bottom: 50rpx;
  height: 70rpx;
  padding: 0 10rpx;
  border-bottom: 1rpx solid #dddddd;
  line-height: 70rpx;
  display: flex;
}

.formCol label{
  letter-spacing: 10rpx;
  color: gray;
}
.formCol input{
  flex: 1;
  width: 50rpx;
  line-height: 70rpx;
  height: 70rpx;

  
}

.formCol image{
  height: 40rpx;
  width: 40rpx;
  display: inline;
  vertical-align: center;
  padding: 15rpx 0;
}



.formBtnContainer{
}

.formBtnContainer button{
  margin-top: 100rpx;
  color: skyblue;
  border-radius: 30rpx;
  width: 300rpx;
  background-color: white;
  border: 1rpx solid skyblue;
}