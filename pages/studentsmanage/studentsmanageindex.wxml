<!--pages/studentsmanage/studentsmanageindex.wxml-->



<view class="searchCol">
  <input placeholder="输入学生姓名"></input>
  <image src="../../img/Search.png"></image>
</view>

<view  class="studentsContainer" >
    <view class="studentContainer" wx:for="{{students}}" wx:key="wechatId">
      <view class="containerLeft">
        <image src="../../img/studentimg.png"></image>
      </view>
      <view class="containerRight">
    
        <text class="targetName">{{item.name}}</text>
        <text class="targetWechat">微信号:{{item.wechatId}}</text>
        <view class="signInCount">
            <text>签到{{item.signInCount}}次</text>  
        </view>
      </view>
  </view>
</view>


<view class="bottomBtns">
    <button>发送邀请</button>
    <button bindtap="goToAddStudent">添加学生</button>
</view>