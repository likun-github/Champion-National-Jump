}

.gameControlBtns text{
  border: 1rpx solid gray;
  padding: 5rpx 15rpx;

}

.tips{
  color: gray;
  padding: 0 40rpx;
  white-space: pre-wrap;
}

.aiInfo{
  margin-left: 30rpx;
}

.aiImg{
  margin-left: 20rpx;
