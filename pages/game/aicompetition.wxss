/* pages/game/aicompetition.wxss */
Page {

 --margin: 30rpx;

}

.poster{
  padding:var(--margin);
  margin-top: var(--margin); 
  margin-left: var(--margin);
  margin-right: var(--margin);
  display: flex;
  flex-direction: column;
  border-radius: 15rpx; 
  box-shadow: 5rpx 5rpx 5rpx 5rpx rgb(230,230,230); 
}
///////////////////////////////////////////////////////////////////////////////////////////
.player{
  display: flex;
  padding: 30rpx 0rpx;
  flex-direction: row;
}

.player image{
  height: 80rpx;
  width: 80rpx;
  border-radius: 50% 50%;
  vertical-align: middle;
}

.playerName{
  margin-left: 20rpx;
  font-size: 30rpx;
  font-weight: 900;
  color: grey;
  min-width: 350rpx;
  display: block;
}

.playerInfo{
  margin-top: 10rpx;
  margin-left: 20rpx;
  font-size: 23rpx;
  color: grey;
  display: block;
}

.timer_running{
  min-width: 140rpx;
  font-size: 30rpx;
  font-weight: 900;
  text-align: right; 
  margin-left: 40rpx;
  display: block;
  color: rgb(253,152,144);
}
.timer_waiting{
  min-width: 140rpx;
  font-size: 30rpx;
  font-weight: 900;
  text-align: right; 
  margin-left: 40rpx;
  display: block;
  color: rgb(82,169,255);
}
///////////////////////////////////////////////////////////////////////////////////////////


///////////////////////////////////////////////////////////////////////////////////////////
///////////////////////////////////////////////////////////////////////////////////////////
.gameButtons {
  display: flex;
  padding: 0rpx;
  margin-top: 30rpx;
  flex-direction: row;
}
.gameButton {
  display: flex;
  padding: 15rpx 30rpx;
  margin-right: 25rpx;
  flex-direction: row;
  border-radius: 30rpx; 
  box-shadow: 1rpx 5rpx 5rpx 1rpx rgb(230,230,230); 
}

.gameButton image{
  height: 30rpx;
  width: 30rpx;
  border-radius: 50% 50%;
  display: block;
}

.gameButtonInfo{
  margin-left: 10rpx;
  font-size: 20rpx;
  color: grey;
  display: block;
}

///////////////////////////////////////////////////////////////////////////////////////////
.gameEndTip {
  position: fixed;
  left: 50%;
  top: 50%;
  transform: translateX(-50%) translateY(-50%);
  background-color: rgb(236, 235, 235);
  display: flex;
  flex-direction: column;
  border-radius: 25rpx;
  width:630rpx;
  padding:25rpx 0rpx;
}

.gameEndTipImage{
  position: relative;
}
.gameEndTipImage .backgroundImage{
  position: relative;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}
.backgroundImage .resultImage{
  width: 600rpx;
}

.gameEndTipImage .gameEndTipText{
  position:absolute;
  top:50%;
  left: 50%;
  width: 290rpx;
  text-align: right;
}
.gameEndTipText .win{
  color:rgb(255,123,123);
  font-size: 70rpx;
  font-weight: 900;  
}
.gameEndTipText .lose{
  color:rgb(82,169,255);
  font-size: 70rpx;
  font-weight: 900;  
}
.gameEndTipText .draw{
  color:rgb(255,123,123);
  font-size: 70rpx;
  font-weight: 900;  
}


.gameEndTipScore{
  color:rgb(53,53,53);
  font-size: 25rpx;
  font-weight: 900;
  text-align: center;
}

.gameEndBtn {
  margin-top:25rpx;
  margin-left:25rpx;
  margin-right:25rpx;
  padding: 25rpx 200rpx;
  background-color: rgb(203,229,255);
  border-radius: 15rpx;
  text-align: center;
}
.gameEndBtn text{
  color:rgb(82,169,255);
  font-size: 30rpx;
  font-weight: 900;
}

