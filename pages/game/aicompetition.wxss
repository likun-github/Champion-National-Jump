.player{
  margin-top: 30rpx;
  display: flex;
  padding: 0 30rpx;
  position: relative;
}

.player view{
  margin-left: 20rpx;
}
.playerName{
  
  font-size: 28rpx;
  display: block;
}
.score{
  font-size: 20rpx;
}

.player image{
  height: 80rpx;
  width: 80rpx;
  border-radius: 50% 50%;
  vertical-align: middle;
}

.vedioContainer{
    margin: 16rpx 0;
    text-align: center;
}

.vedioContainer image{
    height: 680rpx;
    width: 680rpx;  
}


.gameControlBtns{

  display: flex;
  justify-content: space-around;
  font-size: 35rpx;
  color: gray;
  padding: 0 100rpx;
