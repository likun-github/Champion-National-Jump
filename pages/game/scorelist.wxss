/* pages/game/scorelist.wxss */

.userList{
  padding: 0 10rpx;
}

.userItem{
  display: flex;
  padding: 20rpx 0;
  border: 1rpx solid skyblue;
  margin: 20rpx 0;
}

.left{
  width: 130rpx;
  height: 130rpx;
  position: relative;
}

.left view{
  position: absolute;
  left:  50%;
  top: 50%;
  transform: translateX(-50%) translateY(-50%);
  padding: 20rpx;
  border: 1rpx solid skyblue;
}

.center image{
  width: 120rpx;
  height: 120rpx;
}

.right{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 10rpx 0;
  margin-left: 20rpx;
  font-size: 26rpx; 
  padding-right: 60rpx;
}

.rightTop{
  display: flex;
  justify-content: space-between;
}

.rightTop .level{
  color: skyblue;
  border: 1rpx solid skyblue;
}

.rightBottom{
  display: flex;
  justify-content: space-between;
}

