<!--pages/game/game.wxml-->


<view class="competitionRecommand">
  <text class="competitionTopic">赛况推荐</text>
  <text class="competitionInfo">2019全国少年儿童国际跳棋公开赛</text>    
</view>


<view class="gameNav">
  <view class="gameNavBtn" bindtap="goto_ai_competition"> 
    <view class="gameNavBtnTopic">人机对战</view>
    <view class="gameNavBtnInfo">挑战智能 技高一筹</view>
  </view>
  <view class="gameNavBtn"> 
    <view class="gameNavBtnTopic">线上匹配</view>
    <view class="gameNavBtnInfo">棋逢对手 针锋相对</view>
  </view>
  <view class="gameNavBtn"> 
    <view class="gameNavBtnTopic">好友对战</view>
    <view class="gameNavBtnInfo">邀请好友 切磋棋艺</view>
  </view>
</view>






<view class="scoreLink">
  <image class=".playerImage" src="/img/用户头像.svg"> </image>
  <image class=".playerImage" src="/img/用户头像.svg"> </image>
  <image class=".playerImage" src="/img/用户头像.svg"> </image>
  <text bindtap="GoToScoreList">积分榜 >></text>
</view>






<view class="shelter" wx:if="{{showMatching}}">
  <view class="matching">
    <image bindtap="toggleShowMatching" class="cancel" src="/img/cancel.png"></image>
    <view class="title">正在为您匹配对手...</view>
    <view class="matchingUsers">
      <view class="player">
        <image src="/img/studentimg.png"></image>
        <text>学生小甲</text>
      </view>
      <view class="VS">VS</view>
      <view class="player">
        <image src="/img/studentimg.png"></image>
        <text>学生小以</text>
      </view>
    </view>
  </view>
</view>





<view class="bottomNav">
  <image class="bottomBarImage" src="/img/bar.svg" mode="widthFix"></image>

  <view data-route="learn" bindtap="redict">
    <image src="/img/学习.svg" mode="widthFix"></image>
    <text class="bottomNavNotSelected">学 习</text>
  </view>

  <view data-route="chessmanual" bindtap="redict"> 
    <image  mode="widthFix" src="/img/棋谱.svg" ></image>
    <text class="bottomNavNotSelected">棋 谱</text>
  </view>

  <view  data-route="game" bindtap="redict">
    <image  mode="widthFix" src="/img/对战选中.svg"></image>
    <text class = "bottomNavSelected">对 战</text>
  </view>

    <view data-route="competition" bindtap="redict">
    <image  mode="widthFix" src="/img/比赛.svg"></image>
    <text class="bottomNavNotSelected">比 赛</text>
  </view>

  <view data-route="me" bindtap="redict">
    <image mode="widthFix" src="/img/我的.svg"></image>
    <text class="bottomNavNotSelected">我 的</text>
  </view>


</view>