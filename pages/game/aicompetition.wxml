<view class="aiInfo"> <image class="aiImg" src="/img/ai.png" mode="widthFix"></image> <text>AI等级: 普通</text> </view>

<view class="weui-cells__title">{{message}}</view>
<canvas canvas-id='chessboard' bindtap="TapBoard" style="width:{{chessBoardWidth}}px;height:{{chessBoardHeight}}px;border:1px solid black;">

</canvas>

<view class="gameResult" wx:if="{{gameEnd}}">
  <view class="matching">
    <image bindtap="endGame" class="cancel" src="/img/cancel.png"></image>
    <text class="gameResultText">{{gameResult}}</text>
  </view>
</view>

