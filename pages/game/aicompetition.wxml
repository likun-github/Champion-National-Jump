<!--pages/game/aicompetition.wxml-->
<view class = "poster">


  <view class="player"> 
    <view>
      <image wx:if="{{aiLevel==-1}}" src="/img/game/问号头像.svg"></image>
      <image wx:elif="{{aiLevel==0}}" src="/img/game/ai/女孩头像.png"></image>
      <image wx:elif="{{aiLevel==1}}" src="/img/game/ai/大叔头像.png"></image>
      <image wx:elif="{{aiLevel==2}}" src="/img/game/ai/老人头像.png"></image>
    </view> 
    <view>
      <text wx:if="{{aiLevel==-1}}" class = "playerName">玩家选择中...</text>
      <text wx:elif="{{aiLevel==0}}" class = "playerName">邻家的小妹妹</text>
      <text wx:elif="{{aiLevel==1}}" class = "playerName">爱国跳的中年大叔</text>
      <text wx:elif="{{aiLevel==2}}" class = "playerName">沧桑的老大爷</text>

      <text wx:if="{{aiLevel==-1}}" class = "playerInfo">等级：---</text>
      <text wx:elif="{{aiLevel==0}}" class = "playerInfo">等级：入门</text>
      <text wx:elif="{{aiLevel==1}}" class = "playerInfo">等级：普通</text>
      <text wx:elif="{{aiLevel==2}}" class = "playerInfo">等级：大师</text>
    </view>
    <view wx:if="{{currentUser==1}}" class="timer_running">
      <text> {{blackTimerText}}</text>
    </view>
    <view wx:else class="timer_waiting">
      <text> {{blackTimerText}}</text>
    </view>
  </view>


  <canvas canvas-id='chessboard' bindtap="TapBoard" style="width:{{chessBoardWidth}}px;height:{{chessBoardHeight}}px;border:15px solid rgb(82,169,255);">
  </canvas>


  <view class="gameButtons">
    <view class="gameButton" bindtap="reStart">
      <view>
        <image src="/img/game/button/lose.svg"></image>
      </view>
      <view >
        <text class="gameButtonInfo">重新开始</text>
      </view>
    </view>
    <view class="gameButton" bindtap="withdraw">
      <view>
        <image src="/img/game/button/withdraw.svg"></image>
      </view>
      <view>
        <text class="gameButtonInfo" >悔棋</text>
      </view>
    </view>
  </view>


  <view class="player">
    <view>
      <image src="/img/game/user.svg"></image>
    </view>
    <view>
      <text class="playerName">Yunding</text>   
      <text class="playerInfo">段位：九段 积分: 1000</text>  
    </view>
    <view wx:if="{{currentUser==0}}" class="timer_running">
      <text> {{whiteTimerText}}</text>
    </view>
      <view wx:else class="timer_waiting">
        <text> {{whiteTimerText}}</text>
      </view>
    </view>


</view>


<view wx:if="{{gameResult>=0}}" class="gameEndTip">
  <view class="gameEndTipImage">
    <view class="backgroundImage">
      <image wx:if="{{gameResult==0}}" class="resultImage" mode="widthFix" src="/img/game/胜利.png"></image> 
      <image wx:elif="{{gameResult==1}}" class="resultImage" mode="widthFix" src="/img/game/失败.png"></image>
      <image wx:else class="resultImage" mode="widthFix" src="/img/game/和棋.png"></image> 
    </view>
    <view class="gameEndTipText">
      <text wx:if="{{gameResult==0}}" class="win">胜利!</text>
      <text wx:elif="{{gameResult==1}}" class="lose">失败...</text>
      <text wx:elif="{{gameResult==2}}" class="draw">和棋!</text>
    </view>
  </view>
  <text wx:if="{{gameResult==0}}" class="gameEndTipScore">积分 +20</text>
  <text wx:elif="{{gameResult==1}}" class="gameEndTipScore">积分 -20</text>
  <text wx:elif="{{gameResult==2}}" class="gameEndTipScore">积分 +0</text>
  <view class="gameEndBtn">
    <text>再来一局</text>  
  </view>
  <view class="gameEndBtn">
    <text>返回大厅</text>  
  </view>
  <view class="gameEndBtn">
    <text>收藏本局</text>  
  </view>
</view>


<view class="gameSetting">
  <text class="headline">对局设置</text>
  <view class="option">
    <view class="title">
      <text class="blueline">———</text>
      <image mode="widthFix"src="/img/game/ai/AI等级.svg"></image>
      <text>AI等级</text>    
      <text class="blueline">———</text>
    </view>
    <view class="buttons">
      <view id="easy" class="button" style="background-color:{{levelEasyBtnColor}}" bindtouchstart="handleTouchStart">
        <text style="color:{{levelEasyTextColor}}">入门</text>
      </view>
      <view id="medium" class="button" style="background-color:{{levelMediumBtnColor}}" bindtouchstart="handleTouchStart">
        <text style="color:{{levelMediumTextColor}}">普通</text>
      </view>
      <view id="hard" class="button" style="background-color:{{levelHardBtnColor}}" bindtouchstart="handleTouchStart">
        <text style="color:{{levelHardTextColor}}">大师</text>
      </view>
    </view>
  </view>
  <view class="option">
    <view class="title">
      <text class="blueline">———</text>
      <image mode="widthFix"src="/img/game/ai/先后顺序.svg"></image>
      <text>先后顺序</text>    
      <text class="blueline">———</text>
    </view>
    <view class="buttons">
      <view id="first" class="button" style="background-color:{{sequenceFirstBtnColor}}" bindtouchstart="handleTouchStart">
        <text style="color:{{sequenceFirstTextColor}}">先手</text>
      </view>
      <view id="second" class="button" style="background-color:{{sequenceSecondBtnColor}}" bindtouchstart="handleTouchStart">
        <text style="color:{{sequenceSecondTextColor}}">后手</text>
      </view>
      <view id="random" class="button" style="background-color:{{sequenceRandomBtnColor}}" bindtouchstart="handleTouchStart">
        <text style="color:{{sequenceRandomTextColor}}">随机</text>
      </view>
    </view>
  </view>
</view>