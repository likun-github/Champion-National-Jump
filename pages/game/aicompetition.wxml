<view class="player">
      <image src="/img/competitionimages/chessBoardCover.png"></image>
      <view>
        <text class="playerName">一代棋圣李士神</text>   
        <text class="score">积分: 1000</text>  
      </view>
</view>


<view class="gameControlBtns">
    <text bindtap="giveUp">认输</text>
    <text bindtap="withdraw">悔棋</text>
</view>





