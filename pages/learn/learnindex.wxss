/* pages/learn/learnindex.wxss */

.rules{
  padding: 0 20rpx;
}

.ruleItem{
  color: gray;
  display: flex;
  border-bottom: 1rpx solid #dddddd;
  padding-bottom: 20rpx;
}

.ruleLeft{
  width: 200rpx;
  height: 200rpx;
  border: 1rpx solid black;
}
.ruleRight{
  margin-left: 20rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.ruleRight .toptop{
   display: flex;
   justify-content: space-between;
}

.ruleRight .bottom{
  font-size: 30rpx;
  display: flex;
  justify-content: space-between;
}

.mediaBtns{
  padding: 0;
}

.mediaBtns view{
  margin-left: 10rpx;
  border: none; 
}

.topMost{
  color: red;
  border: 1rpx solid red;
}


.tutorialPart{
  padding: 0 16rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  margin-top: 30rpx;
}

.time{
  color: gray; 
  text-align: right;
  font-size: 22rpx;
  padding-right: 10rpx;
}
.tutorial{
  color: gray;

  border: 1rpx solid gray;
  
  border-radius: 20rpx; 

  padding: 0rpx 0rpx 10rpx 0rpx;

  margin-bottom: 30rpx;
  overflow: hidden;
}

.tutorial .cover{
  height: 325rpx;
  width: 325rpx;
  
  
}
.cover image{
  height: 100%;
  width: 100%;
  background-color: #eeeeee; 
}
.name{
  text-align: center;
  font-size: 32rpx;
  margin: 10rpx 0; 
}


.tutorialInfo{
  
}


.tutorialInfo .mediaInfo{
  display: flex;
  justify-content: space-around;
  font-size: 30rpx;
}
.mediaInfo image{

  width: 30rpx;
  vertical-align: middle;

}

.testIntro{
  white-space: pre-wrap;

}

